<Grid x:Class="SuiQemu.主页" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:SuiQemu">
    <Grid>
        <Grid x:Name="列表视图">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="18,8,18,4">
                <TextBlock Text="SuiQemuWG" FontSize="18" VerticalAlignment="Center"/>
            </StackPanel>
            <Button x:Name="路径按钮" Grid.Row="1" Margin="18,4,18,8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="9" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Click="处理浏览按钮点击">
                <StackPanel Orientation="Horizontal" Spacing="9">
                    <FontIcon Glyph="&#xE710;" FontSize="18"/>
                    <TextBlock x:Name="按钮标题" Text="选择路径" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <ListView x:Name="项目列表" Grid.Row="2" Margin="18,0,18,18" SelectionMode="None" ItemsSource="{x:Bind Items, Mode=OneWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="9" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <Grid>
                                <StackPanel Orientation="Horizontal" Spacing="9" HorizontalAlignment="Left">
                                    <FontIcon Glyph="&#xE968;" FontSize="18" Foreground="{ThemeResource SystemAccentColor}"/>
                                    <TextBlock Text="虚拟机项目" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                                    <Button ToolTipService.ToolTip="查看" Click="弹出配置详情" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE71D;" FontSize="14"/>
                                    </Button>
                                    <Button ToolTipService.ToolTip="删除" Click="删除项目" Background="Transparent" BorderThickness="0" Foreground="Red">
                                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                    </Button>
                                    <Button ToolTipService.ToolTip="启动" Click="进入虚拟机详情" Background="Transparent" BorderThickness="0" Foreground="{ThemeResource SystemAccentColor}">
                                        <FontIcon Glyph="&#xE768;" FontSize="14"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid x:Name="仿真视图" Visibility="Collapsed" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}">
                <Button Width="48" Height="48" Click="切换步骤" Tag="0" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE9CA;"/>
                </Button>
                <Button Width="48" Height="48" Click="切换步骤" Tag="1" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE964;"/>
                </Button>
                <Button Width="48" Height="48" Click="切换步骤" Tag="2" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE7C3;"/>
                </Button>
                <Button Width="48" Height="48" Click="切换步骤" Tag="3" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE12B;"/>
                </Button>
                <Button Width="48" Height="48" Click="切换步骤" Tag="4" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE7F4;"/>
                </Button>
                <Button Width="48" Height="48" Click="切换步骤" Tag="5" Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE756;"/>
                </Button>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="步骤标题" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="15"/>
                <Grid x:Name="配置容器" Grid.Row="1"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="18" Spacing="9">
                    <Button Content="取消" Click="关闭仿真视图"/>
                    <Button x:Name="确认按钮" Style="{StaticResource AccentButtonStyle}" Click="推进流程"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid x:Name="详情载体" Visibility="Collapsed"/>
    </Grid>
</Grid>