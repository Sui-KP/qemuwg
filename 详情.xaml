<Grid x:Class="SuiQemu.详情" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0" Padding="18" Spacing="9" Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}">
        <Button Click="处理返回点击" Padding="9" CornerRadius="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE72B;" FontSize="14"/>
                <TextBlock Text="返回列表" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <TextBlock Text="虚拟机状态" FontSize="18" Margin="0,9,0,0"/>
        <TextBlock x:Name="状态文本" Text="就绪" Foreground="Gray" FontSize="14"/>
        <TextBlock Text="配置命令" Margin="0,9,0,0" FontSize="14"/>
        <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="9" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            <ScrollViewer Height="180">
                <TextBlock x:Name="配置文本" TextWrapping="Wrap" FontSize="12" Opacity="0.8"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="操作按钮" Content="启动" Click="处理控制点击" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" Height="36" CornerRadius="8"/>
    </StackPanel>
    <Grid Grid.Column="1" Margin="18">
        <Border CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="控制台输出 (QEMU Pipeline)" Margin="15,10" FontSize="12" Opacity="0.6"/>
                <TextBox x:Name="日志框" Grid.Row="1" Margin="9,0,9,9" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="13" Background="Transparent" Foreground="{ThemeResource SystemAccentColor}" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>
    </Grid>
</Grid>